%h1 
  Purchase Order
.small
  %strong= @purchase_order.your_company_name
  = @purchase_order.delivery_address

%br/

.row
  .large-12.columns


    %p
      %label PO #:
      = @purchase_order.number
      = @purchase_order.budget
.row
  .large-6.columns

    %p 
      %label Raise by
      = @purchase_order.raised_by
    %p
      %label Phone:
      = @purchase_order.phone_number

    %p
      %label Email:
      = @purchase_order.email



  .large-6.columns
    %p
      %b Supplier name:
      = @purchase_order.supplier_name

  



%table{ style: "width:100%;"}
  %thead
    %tr
      %td Item
      %td Quantity
      %td Tax
      %td Unit Cost
      %td Total

  - @purchase_order.line_items.each do |line_item|
    %tr
      %td{ width: "50%"}
        = line_item.description
      %td{ width: "10%"}
        = line_item.quantity
      %td{ width: "10%"}
        = line_item.tax_rate
      %td{ width: "10%"}
        = number_to_currency line_item.price
      %td{ width: "10%" }
        = number_to_currency line_item.total


  %tfoot
    %tr
      %td
      %td
      %td{ colspan: 2} Total ex Tax
      %td=  number_to_currency @purchase_order.total
    %tr
      %td
      %td
      %td{ colspan: 2} Total Inc Tax
      %td= number_to_currency @purchase_order.total_including_tax

.row
  .large-12.columns
    %label Notes
    %p#note
      = "None" if @purchase_order.note.blank?
      = @purchase_order.note 

.row
  .large-2.columns.signature_label
    %label Signed By
  .large-4.columns
    #signature_line

  .large-2.columns.signature_label
    %label Date
  .large-4.columns
    #signature_line


