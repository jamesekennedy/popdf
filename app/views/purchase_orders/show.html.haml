.row
  .large-8.columns
    .panel
      = render "purchase_order_detail"
  .large-4.columns
    .panel
      = link_to "Download As PDF", purchase_order_path(@purchase_order, format: :pdf), disabled: disable_download(@purchase_order), class: "button #{class_for(@purchase_order)}"
      = link_to "Request Approval", new_purchase_order_authorization_path( @purchase_order ), class: "button secondary"
      = link_to "Back", :back




- unless @purchase_order.notes.empty?
  .row
    .large-12.columns
      - @purchase_order.notes.each do |note|
        .panel
          = simple_format note.content

.row
  .large-12.columns
 

%script
  ga('send', 'event', 'All', 'Show PO');
